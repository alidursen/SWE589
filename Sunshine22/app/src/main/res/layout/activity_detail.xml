<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app    ="http://schemas.android.com/apk/res-auto"
    xmlns:tools  ="http://schemas.android.com/tools"

    android:layout_width ="match_parent"
    android:layout_height="match_parent"

    tools:context="tr.com.mskr.sunshine22.DetailActivity">

    <TextView
        android:id="@+id/tv_detail_dayTemp"
        android:layout_width="153dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="32dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingHorizontal="50dp"
        android:paddingVertical="20dp"
        android:text="DAY_TEMP"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051">

    </TextView>

    <TextView
        android:id="@+id/tv_detail_date"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:text="DATE"
        app:layout_constraintBottom_toTopOf="@+id/tv_detail_dayTemp"
        app:layout_constraintEnd_toEndOf="@+id/tv_detail_dayTemp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_dayTemp" />

    <TextView
        android:id="@+id/tv_detail_minmaxTemp"
        android:layout_width="66dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:text="MIN_MAX_TEMP"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_dayTemp"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_dayTemp"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_dayTemp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_detail_wDescription"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="DESCR"
        app:layout_constraintEnd_toEndOf="@+id/tv_detail_minmaxTemp"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_dayTemp"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_dayTemp" />

    <ImageView
        android:id="@+id/iv_detail_wIcon"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_dayTemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_minmaxTemp"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_dayTemp"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

</android.support.constraint.ConstraintLayout>